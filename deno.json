{
  "lint": {
    "exclude": ["./scripts"]
  },
  "fmt": {
    "proseWrap": "preserve",
    "exclude": ["./scripts"]
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable"
    ]
  },
  "tasks": {
    "build": "deno run --allow-env --allow-run --allow-read --allow-write --allow-net ./bin/build.ts"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.2",
    "@std/path": "jsr:@std/path@^1.0.3",
    "esbuild/": "https://deno.land/x/esbuild@v0.23.1/"
  }
}
